<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00BCD4"
        tools:context=".feature.account.login.LoginFragment">

        <ImageView
            android:id="@+id/img_content"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:background="@drawable/user_icon_login"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_50sdp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:background="@drawable/background_circle_green_stroke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_person_login"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:hint="User name"
                    android:inputType="text"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:background="@color/color_00000000"
                    android:textColor="#C6B3E678"
                    android:textColorHint="#A48E8A8A"
                    />

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:background="@drawable/background_circle_green_stroke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_pass"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_lock_login"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:hint="Password"
                    android:background="@color/color_00000000"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:textColor="#C6B3E678"
                    android:textColorHint="#A48E8A8A"
                    />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/background_button_green_stroke"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:fontFamily="sans-serif-black"
            />

        <LinearLayout
            android:id="@+id/layout_register"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textStyle="italic|bold"
                android:text="  Are you register?"
                android:layout_marginVertical="10dp"
                 />
            <TextView
                android:id="@+id/tv_forget_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:textStyle="italic|bold"
                android:text=" Forget pass?"
                android:layout_marginVertical="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</layout>