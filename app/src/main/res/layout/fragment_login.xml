<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".feature.account.login.LoginFragment">

        <ImageView
            android:id="@+id/img_content"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher"
            android:layout_marginVertical="30dp" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="User name"
            android:textColor="#C6B3E678"
            android:textColorHint="#A48E8A8A"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/background_circle_green_stroke" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:textColor="#C6B3E678"
            android:textColorHint="#A48E8A8A"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/background_circle_green_stroke" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_button_green_stroke"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:text="LOGIN"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:id="@+id/layout_register"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#4CAF50"
                android:textStyle="italic|bold"
                android:text="  Are you register?"
                android:layout_marginVertical="10dp"
                 />
            <TextView
                android:id="@+id/tv_forget_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#4CAF50"
                android:textStyle="italic|bold"
                android:text=" Forget pass?"
                android:layout_marginVertical="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</layout>