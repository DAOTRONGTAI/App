<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign up"
            android:textSize="50dp"
            android:layout_marginVertical="25dp"
            android:textColor="@color/esu_green" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="8dp"
            android:textColor="#C6B3E678"
            android:textColorHint="#A48E8A8A"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/background_circle_green_stroke" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:textColorHint="#A48E8A8A"
            android:inputType="textPassword"
            android:textColor="#C6B3E678"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="8dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/background_circle_green_stroke" />

        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="User name"
            android:textColorHint="#A48E8A8A"
            android:textColor="#C6B3E678"
            android:drawableLeft="@drawable/ic_avatar_1"
            android:drawablePadding="8dp"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/background_circle_green_stroke" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="8dp"
            android:textColorHint="#A48E8A8A"
            android:textColor="#C6B3E678"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/background_circle_green_stroke" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_button_green_stroke"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:text="SIGN UP"
            android:textColor="@color/white" />

    </LinearLayout>
</layout>